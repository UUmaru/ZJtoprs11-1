<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:padding="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_pat_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="预入科患者(3人)"
            android:textColor="#333333"
            android:textSize="@dimen/txt_size_14" />

        <RelativeLayout
            android:id="@+id/rl_reserve_dismiss"
            android:layout_width="33dp"
            android:layout_centerVertical="true"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_close_close_selector"
            android:padding="11dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/close" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_reserved_pats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_dot_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" />

</LinearLayout>
