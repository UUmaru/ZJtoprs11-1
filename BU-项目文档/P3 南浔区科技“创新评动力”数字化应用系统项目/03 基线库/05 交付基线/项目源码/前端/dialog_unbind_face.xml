<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="426dp"
    android:background="@drawable/login_bg"
    android:padding="33dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="人脸识别设置"
            android:id="@+id/tv_title"
            android:textColor="@color/yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解除绑定"
            android:id="@+id/tv_title1"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_below="@id/tv_title" />

        <ImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:padding="11dp"
            android:background="#00000000"
            android:id="@+id/ib_out"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/close"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:text="确认"
            android:id="@+id/btn_commit"
            android:background="@drawable/button_gray_orange"
            android:layout_toStartOf="@id/btn_bind"
            android:textSize="9sp"
            android:layout_marginEnd="10dp"
            android:textColor="#4285F4" />

        <Button
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:text="取消"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_cancel"
            android:textSize="9sp"
            android:background="@drawable/config_complete_unselect"
            android:textColor="@color/white" />

        <Button
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:text="返回主界面"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_home"
            android:visibility="gone"
            android:textSize="9sp"
            android:background="@drawable/config_complete_unselect"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_centerInParent="true"
        android:id="@+id/img_facesetting"
        android:src="@drawable/facesetting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认解除面部识别绑定吗？"
        android:layout_below="@id/img_facesetting"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="13sp"
        android:id="@+id/tv_unbind_remind"
        android:background="@drawable/face_remind_bg"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
