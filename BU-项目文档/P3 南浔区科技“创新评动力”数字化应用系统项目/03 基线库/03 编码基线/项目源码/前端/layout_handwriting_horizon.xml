<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_panel"
    android:orientation="vertical"
    skin:enable="true">

    <LinearLayout
        android:id="@+id/ll_hand_writing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hand_writing_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_handwriting_tv_hand_writing_one_layout_marginLeft"
                android:layout_marginTop="@dimen/layout_handwriting_tv_hand_writing_one_layout_marginTop"
                android:background="@null"
                android:gravity="top"
                android:text="请点击输入手写内容..."
                android:textColor="@color/dynamic_handwriting_item_txt_color"
                android:textSize="@dimen/text_size_12"
                skin:enable="true" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/layout_handwriting_view_layout_height"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_handwriting_view_layout_marginLeft"
            android:layout_marginTop="@dimen/layout_handwriting_view_layout_marginTop"
            android:layout_marginRight="@dimen/layout_handwriting_view_layout_marginRight"
            android:layout_marginBottom="@dimen/layout_handwriting_view_layout_marginBottom"
            android:background="#979797" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hand_writing_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_handwriting_tv_hand_writing_two_layout_marginLeft"
                android:layout_marginTop="@dimen/layout_handwriting_tv_hand_writing_two_layout_marginTop"
                android:background="@null"
                android:gravity="top"
                android:text="请点击输入手写内容..."
                android:textColor="@color/dynamic_handwriting_item_txt_color"
                android:textSize="@dimen/text_size_12"
                skin:enable="true" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_handwriting_ll_hand_writing_layout_height"
        android:layout_alignBottom="@id/ll_hand_writing"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_panelbottom"
        tools:background="@color/gray"
        tools:visibility="visible"
        skin:enable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_handwriting_shouxieban_layout_marginLeft"
            android:gravity="center"
            android:text="手写板"
            android:textColor="@color/dynamic_handwriting_tv_contacts_label_txt_color"
            android:textSize="@dimen/text_size_12"
            skin:enable="true" />
    </RelativeLayout>

</RelativeLayout>