<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_duty_info_person_list_1"
    android:layout_height="@dimen/dialog_duty_info_person_list_2"
    android:background="@drawable/login_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_phone_management_paddingBottom"
    android:paddingLeft="@dimen/dialog_phone_management_paddingLeft"
    android:paddingRight="@dimen/dialog_phone_management_paddingRight"
    android:paddingTop="@dimen/dialog_phone_management_paddingTop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行名"
            android:textColor="#FF333333"
            android:textSize="@dimen/text_size_16" />
        <TextView
            android:layout_marginLeft="@dimen/dialog_duty_info_person_list_3"
            android:id="@+id/column_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列名"
            android:textColor="#FF333333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_person_list"
        android:layout_marginTop="@dimen/dialog_duty_info_person_list_4"
        android:padding="@dimen/dialog_duty_info_person_list_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_duty_info_person_list_6"
        android:gravity="left|top"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_finish"
            android:layout_width="@dimen/dialog_phone_management_btn_finish_layout_width"
            android:layout_height="@dimen/dialog_phone_management_btn_finish_layout_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_finish_btn"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/text_size_10" />


        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dialog_phone_management_btn_cancel_layout_width"
            android:layout_height="@dimen/dialog_phone_management_btn_cancel_layout_height"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dialog_phone_management_btn_cancel_layout_marginRight"
            android:layout_toLeftOf="@id/btn_finish"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FF666666"
            android:textSize="@dimen/text_size_10" />
    </RelativeLayout>


</LinearLayout>
